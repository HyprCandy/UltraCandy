//  Thanks to Bina
{ 
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "$(find \"${XDG_CONFIG_HOME:-$HOME/.config}/fastfetch/pngs/\" -name \"*.png\" | shuf -n 1)",
    "height": 15,
      "padding": {
      "top": 2
      }
  },
  "display": {
        "separator": " ➜  "
  },
  "modules": [
      {
        "type": "custom",
        "format": " ┌─────────────────────────  ✝ 👑 ✝  ─────────────────────────┐"
      },
      {
          "type": "host",
          "format": "{5} {2}",
          //"format": "{5} {1} Type {2}",
          "key": "PC 󰇺 ",
          "keyColor": "31"
      },
      {
          "type": "cpu",
          "format": "{1} @ {7} GHz",
          "key": " ├  ",
          "keyColor": "31"
      },
      {
          "type": "gpu",
          "format": "{1} {2}",            
          "key": " ├ 󰢮 ",
          "keyColor": "32"
      },
      {
          "type": "memory",
          "key": " ├  ",
          "keyColor": "33"
      },
      {
          "type": "swap",
          "key": " ├ 󰓡 ",
          "keyColor": "33"
      },
      {
          "type": "disk",
          "key": " ├ 󰋊 ",                                                      
          "keyColor": "31"
      },
      {
        "type": "os",
        "key": "OS  ",
        "keyColor": "32"  // = color1
      },
      {
          "type": "kernel",
          "key": " ├  ",
          "keyColor": "32"
      },
      {
          "type": "shell",
          "key": " ├  ",
          "keyColor": "31"
      },
      {
          "type": "packages",
          "key": " ├ 󰏗 ",                                                      
          "keyColor": "31"
      },
      {
          "type": "disk",
          "folders": "/",
          "key": " ├ 󱦟 ",                                                      
          "keyColor": "33",
          "format": "{days} days"
      },
      {
          "type": "uptime",
          "key": " ├ 󱦟 ",                                                      
          "keyColor": "33"
      }, 
      {
          "type": "wm",
          "key": "WM 󱫐 ",
          "keyColor": "32"
      },
      {
          "type": "wmtheme",
          "key": " ├ 󰉼 ",
          "keyColor": "32"
      },
      {
          "type": "icons",
          "key": " ├ 󰀻 ",
          "keyColor": "32"
      },
      {
          "type": "cursor",
          "key": " ├  ",
          "keyColor": "31"
      },
      {
          "type": "terminal",
          "key": " ├  ",
          "keyColor": "31"
      },
      {
          "type": "terminalfont",
          "key": " ├ 󱗃 ",
          "keyColor": "31"
      },
      {
        "type": "custom",
        "format": " └────────────────────────────────────────────────────────────┘"
      },
      {
        "type": "colors",
        "paddingLeft": 2,
        "symbol": "star"
      },
      "break",
  ]
}